FROM ubuntu:20.04
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get -y install gnupg
RUN apt-get -y install wget sudo curl tcpdump net-tools vim iputils-ping
RUN apt-get update
RUN wget -qO - https://artifacts.elastic.co/GPG-KEY-elasticsearch | sudo apt-key add -
RUN apt-get -y install apt-transport-https
RUN echo "deb https://artifacts.elastic.co/packages/7.x/apt stable main" | sudo tee  /etc/apt/sources.list.d/elastic-7.x.list
RUN apt-get update
RUN apt-get -y install kibana
RUN cp /etc/kibana/kibana.yml /etc/kibana/kibana.yml_orig
COPY kibana.yml /etc/kibana/kibana.yml
ENTRYPOINT sudo service kibana restart && bash
